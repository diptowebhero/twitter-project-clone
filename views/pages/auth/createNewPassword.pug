extends ./../../partials/header.pug
block title
    title=title
block cssLink
    link(rel="stylesheet" href="/assets/css/auth.css")

block jsScript
    script(src="/assets/js/register.js" defer)
block bodyContent
    div.authSection
        div.wrapper
            div.auth_wrapper.resetPass
                h2 Create a New Password
                    img(src="./../../../assets/images/lock.png" alt="")
                form(action="/createNewPass" method="post")
                    label(for="username") New Password
                    .passContainer
                        input#password(type="password" name="password" value = user? user.password : '' placeholder="Enter Password" class="form-control")
                        span#passwordEyeIcon
                            i.fas.fa-eye
                    if error.password
                        p.error #{error.password.msg}
                    label(for="username").mt-3 Confirm Password
                    .passContainer
                        input#confirmPassword(type="text" name="confirmPassword" value = user? user.confirmPassword : '' placeholder="Re-confirm password" class="form-control")
                        span#confirmPasswordEyeIcon
                            i.fas.fa-eye
                    if error.confirmPassword
                        pr.error #{error.confirmPassword.msg}
                    input(type="hidden" name="otp" value=otp.otp)
                    input(type="hidden" name="otpId" value=otp.otpId)
                    input(type="hidden")
                    input#formBtn(type="submit" class="form-control mt-3" value="Save & Login")
                    p.toggle_page.mt-2 Need to login?
                        a(href="/login") Login Here